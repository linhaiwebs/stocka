{
  "name": "landing-page-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --noEmit false; copyfiles -u 1 'src/**/*.sql' dist; npm run verify-build",
    "verify-build": "tsx scripts/verify-build.ts",
    "start": "node dist/server.js",
    "setup": "tsx scripts/setup.ts",
    "setup:fresh": "tsx scripts/setup.ts --reset",
    "setup:reset": "tsx scripts/setup.ts --reset",
    "create-admin": "tsx scripts/create-admin.ts",
    "seed-templates": "tsx scripts/seed-templates.ts",
    "seed-templates:force": "tsx scripts/seed-templates.ts --force",
    "import-templates": "tsx scripts/import-react-templates.ts",
    "seed-component-code": "tsx scripts/seed-component-code.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "dompurify": "^3.0.8",
    "jsdom": "^25.0.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "copyfiles": "^2.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
